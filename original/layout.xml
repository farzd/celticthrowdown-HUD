<!DOCTYPE StreamControlLayout>
<layout width="400" height="260" tabbed="0">
  <lineEdit id="pName1" x="10" y="10" width="180" height="20" dataSet="players.csv" >Player 1</lineEdit>
  <lineEdit id="pCountry1" x="200" y="10" width="50" height="20" dataSet="players.csv" dataField="2" master="pName1" >Country</lineEdit>
  <lineEdit id="pName2" x="10" y="40" width="180" height="20" dataSet="players.csv" >Player 2</lineEdit>
  <lineEdit id="pCountry2" x="200" y="40" width="50" height="20" dataSet="players.csv" dataField="2" master="pName2" >Country</lineEdit>
  <spinBox id="pScore1" x="260" y="10" width="40" height="22" maximum="999" />
  <spinBox id="pScore2" x="260" y="40" width="40" height="22" maximum="999" />
  <lineEdit id="pLabel1" x="10" y="70" width="180" height="20" >Player 1 Label</lineEdit>
  <lineEdit id="pLabel2" x="10" y="100" width="180" height="20" >Player 2 Label</lineEdit>  
  <button type="reset" x="310" y="10" width="40" height="23" tooltip="Clear Player 1 fields" id="clear1" reset="pName1,pCountry1,pLabel1">Clear</button>
  <button type="reset" x="310" y="40" width="40" height="23" tooltip="Clear Player 2 fields" id="clear2" reset="pName2,pCountry2,pLabel2">Clear</button>
  <button type="reset" x="350" y="10" width="40" height="23" tooltip="Reset the Scores" id="reset" reset="pScore1,pScore2">Reset</button>
  <button type="swap" x="350" y="40" width="40" height="23" tooltip="Swap the Scores" id="swap" swapSet1="pName1,pScore1,pCountry1,pLabel1" swapSet2="pName2,pScore2,pCountry2,pLabel2">Swap</button>
  <button type="reset" x="200" y="70" width="40" height="23" tooltip="Clear Player 1 fields" id="clear3" reset="pLabel1">Clear</button>
  <button type="reset" x="200" y="100" width="40" height="23" tooltip="Clear Player 2 fields" id="clear4" reset="pLabel2">Clear</button>
  <label x="10" y="134" width="95" height="13">Game Status</label>
  <lineEdit id="gameStatus" x="110" y="130" width="236" height="20" />
  <button type="reset" x="350" y="130" width="40" height="23" tooltip="Clear Player 2 fields" id="clear5" reset="gameStatus">Clear</button>
  <label x="10" y="164" width="95" height="13">Lower Third Label</label>
  <lineEdit id="mText1" x="110" y="160" width="280" height="20" />
  <label x="10" y="194" width="95" height="13">Lower Third Text</label>
  <lineEdit id="mText2" x="110" y="190" width="280" height="20" />
</layout>
